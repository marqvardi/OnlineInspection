@model OnlineInspection.WebUI.Models.OrderListViewModel

@{
    ViewBag.Title = "List of orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Order List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped table-hover table-bordered col-md-4" style="margin:auto !important">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            Supplier ID
        </th>
    </tr>

    @foreach (var item in Model.Orders)
    {
        <tr>
            <td>
                @Html.ActionLink(item.OrderId.ToString(), "OrderDetail", "Order", new { item.OrderId }, null)
                @*@Html.DisplayFor(modelItem => item.OrderId)*@
            </td>
            <td>
                @Html.DisplayFor(ModelItem => item.SupplierId)
            </td>
        </tr>
    }

</table>
